<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50252f">

    <RelativeLayout
        android:id="@+id/resultscreen"
        android:layout_width="393dp"
        android:layout_height="598dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/paperIm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/paper" />

        <ImageView
            android:id="@+id/lampIm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/lamp" />

        <ImageView
            android:id="@+id/lampIm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/lamp" />

        <TextView
            android:id="@+id/numbertv"
            android:layout_width="156dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/paperIm"
            android:layout_alignBottom="@+id/paperIm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="415dp"
            android:fontFamily="@font/kanit_light"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#4E2D23"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/resultmessage"
            android:layout_width="273dp"
            android:layout_height="359dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="171dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="68dp"
            android:fontFamily="@font/kanit_light"
            android:textColor="#323232"
            android:textSize="14sp" />

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/imageZoom"
            android:layout_width="376dp"
            android:layout_height="589dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="9dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/savebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nextbt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultscreen"
        app:srcCompat="@drawable/savebt" />

    <ImageView
        android:id="@+id/nextbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultscreen"
        app:srcCompat="@drawable/nextbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>